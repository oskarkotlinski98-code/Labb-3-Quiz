<UserControl x:Class="Labb_3_Quiz.Views.SelectQuizView"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="Beige" Height="700" Width="600">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Select a Quiz" FontSize="40" FontWeight="Bold"
                   HorizontalAlignment="Center" Margin="0,10,0,30"/>

        <ListBox x:Name="QuizList"
                 Grid.Row="1"
                 DisplayMemberPath="Title"
                 FontSize="24"
                 BorderThickness="2"
                 BorderBrush="SaddleBrown"
                 Background="Ivory"
                 SelectionMode="Single"/>

        <StackPanel Grid.Row="2" Orientation="Horizontal"
                    HorizontalAlignment="Center" Margin="0,30,0,0">
            <Button Content="Play Selected Quiz"
                    FontSize="24" Margin="10" Padding="20,10"
                    Click="PlaySelectedClick"/>
            <Button Content="Back"
                    FontSize="24" Margin="10"  Padding="20,10"
                    Click="BackClick"/>
        </StackPanel>
    </Grid>
</UserControl>
