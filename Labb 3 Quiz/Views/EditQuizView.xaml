<UserControl x:Class="Labb_3_Quiz.Views.EditQuizView"
                   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="Beige">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Edit an existing quiz"  FontSize="40" FontWeight="Bold" HorizontalAlignment="Center"  Margin="0,10,0,30"/>

        <ListBox x:Name="QuizList" DisplayMemberPath="Title" Grid.Row="1" FontSize="24" BorderThickness="2" BorderBrush="Black" Background="Ivory" SelectionMode="Single"/>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,30,0,0">
            <Button Content="Edit selected quiz"  FontSize="24" Margin="10" Padding="20,10" Click="EditSelectedQuizClick"/>
            <Button Content="Delete selected quiz" FontSize="24"  Margin="10" Padding="20,10" Click="DeleteSelectedQuizClick"/>
            <Button Content="Back" FontSize="24" Margin="10" Padding="20,10" Click="BackClick" />
        </StackPanel>
    </Grid>
</UserControl>